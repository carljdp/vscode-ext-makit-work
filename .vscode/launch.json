// launch.json for PROJECT FOLDER
{
	"version": "0.2.0",
	"configurations": [
		
		{
			"name": "Run/Debug",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"envFile": "${workspaceFolder}/.env"
		},
		{
			"name": "Run/Debug (workspace & profile)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--profile=vscode-ext-dev-debug",
				"${workspaceFolder}/.debug/debug.code-workspace"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"envFile": "${workspaceFolder}/.env"
		},
		{
			"name": "Run/Debug Extension (with Tests)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch-tests",
			"envFile": "${workspaceFolder}/.env"
		}
	]
}
