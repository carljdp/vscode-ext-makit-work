{
    //
    "json.schemaDownload.enable": true,
    "json.schemas": [
        {
            "url": "https://json.schemastore.org/package.json",
            "fileMatch": [
                "**/?(.*|*)**/package.json{c,5,}"
            ],
        },
        {
            "url": "https://json.schemastore.org/tsconfig.json",
            "fileMatch": [
                "**/?(.*|*)**/{.,}tsconfig{.*,}.json{c,5,}",
            ],
        },
        {
            "url": "https://json.schemastore.org/swcrc",
            "fileMatch": [
                "**/?(.*|*)**/.swcrc",
                "**/?(.*|*)**/{.,}swcrc{.*,}.json{c,5,}",
            ],
        },
    ],
    //
    "testExplorer.useNativeTesting": true,
    //
    "eslint.packageManager": "pnpm",
    "eslint.enable": true,
    "eslint.run": "onType",
    // "eslint.debug": false,
    "eslint.experimental.useFlatConfig": true,
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    // "eslint.lintTask.options": "-c eslint.config.mjs",
    // "eslint.onIgnoredFiles": "warn",
    "eslint.useESLintClass": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "json",
        "yaml",
    ],
    "eslint.workingDirectories": [
        "${workspaceFolder}",
    ],
    //
    "mocha.path": "node_modules/mocha",
    "mocha.showErrorPopup": false,
    "mocha.files.glob": "**/*.test.js",
    "mocha.files.ignore": [
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/output/**",
            "**/build/**",
            "**/tmp/**",
            "**/temp/**",
            "**/.history/**",
            "**/.cache/**",
        ],
    //
    "mochaExplorer.logpanel": true,
    "mochaExplorer.files": "**/*.test.js",
    "mochaExplorer.ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/out/**",
        "**/output/**",
        "**/build/**",
        "**/tmp/**",
        "**/temp/**",
        "**/.history/**",
        "**/.cache/**",
    ],
    //
}