{
    "files.exclude": {
        "**/.git": true,
        "**/.history": true,
        "**/.cache": true,
        "**/.nyc_output": true,
        "**/node_modules": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // "**/pnpm-lock.yaml": true,
    },
    "search.exclude": {
    // 	".cache": true,
        ".history": true,
    // 	"build": true,
    // 	"dist": true,
    // 	"out": true,
    // 	"output": true,
    // 	"tmp": true
    },
    //
    "workbench.settings.useSplitJSON": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "debug.console.collapseIdenticalLines": false,
    "explorer.compactFolders": false,
    //
    "json.schemaDownload.enable": false, // in an attempt to fix the "schema not found" error
    "json.schemas": [
        {
            "url": "https://json.schemastore.org/package.json",
            "fileMatch": [
                "**/?(.*|*)**/package.json{c,5,}"
            ],
        },
        {
            "url": "https://json.schemastore.org/tsconfig.json",
            "fileMatch": [
                "**/?(.*|*)**/{.,}tsconfig{.*,}.json{c,5,}",
            ],
        },
        {
            "url": "https://json.schemastore.org/swcrc",
            "fileMatch": [
                "**/?(.*|*)**/.swcrc",
                "**/?(.*|*)**/{.,}swcrc{.*,}.json{c,5,}",
            ],
        },
    ],
    //
    "testExplorer.useNativeTesting": true,
    //
    // Experimental: turn off builtin eslint/typescript
    //
    "typescript.validate.enable": false,
    "typescript.format.enable": false,
    //
    "eslint.enable": false,
    "eslint.lintTask.enable": false,
    "eslint.format.enable": false,
    //
    "eslint.run": "onType",
    // "eslint.debug": false,
    "eslint.experimental.useFlatConfig": true,
    // "eslint.lintTask.options": "-c eslint.config.mjs",
    // "eslint.onIgnoredFiles": "warn",
    "eslint.useESLintClass": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "json",
        "yaml",
    ],
    "eslint.workingDirectories": [
        "${workspaceFolder}",
    ],
    //
    "mocha.path": "node_modules/mocha",
    "mocha.showErrorPopup": false,
    "mocha.files.glob": "**/*.test.js",
    "mocha.files.ignore": [
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/output/**",
            "**/build/**",
            "**/tmp/**",
            "**/temp/**",
            "**/.history/**",
            "**/.cache/**",
        ],
    //
    "mochaExplorer.logpanel": true,
    "mochaExplorer.files": "**/*.test.js",
    "mochaExplorer.ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/out/**",
        "**/output/**",
        "**/build/**",
        "**/tmp/**",
        "**/temp/**",
        "**/.history/**",
        "**/.cache/**",
    ],
    //
}