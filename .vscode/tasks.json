// tasks.json for PROJECT FOLDER
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run current file",
			"type": "shell",
			"command": "./node_modules/.bin/env-cmd",
			"args": [
				"--file",
				"./.env",
				"./node_modules/.bin/ts-node",
				"${file}"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "npm: install",
			"detail": "Install all dependencies for a project",
			"type": "npm",
			"script": "install",
			"group": "none",
			"presentation": {
				"panel": "shared",
				"group": "clean",
				"reveal": "always",
				"focus": false,
				"clear": true,
				"echo": true,
				"showReuseMessage": true,
			},
			"problemMatcher": []
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "npm: watch-tests",
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
