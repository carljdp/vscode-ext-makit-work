{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "eslint-watch.mjs",
      "type": "shell",
      "command": "node packages/startx/devt/eslint-watch.mjs",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        // "$eslint-stylish",
        "$eslint-compact"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "group": "linting"
      },
      // "runOptions": {
      //   "runOn": "folderOpen"
      // }
    }
  ]
}