{
    "extends": "./tsconfig.json",
    //
    // This serves as a base for apps to be bundled into a single file
    // - like with webapps
    //
    "compilerOptions": {
        //
        // ensure that nobody can accidentally use this config
        // to compile the project
        "noEmit": true,
        //
        "module": "es2022", // === "esnext"
        // allow more lax import checking 
        // - allow importing from 3rd party modules that might
        //   not be included in the bundle.
        "moduleResolution": "bundler"
    },
    "$schema": "https://json.schemastore.org/tsconfig"
}