{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current TS File",
            "runtimeArgs": [
                // "--import=../bootstrap/dist/esm/index.js",
                "--import=./bootstrap.mjs",
            ],
            "args": [
                "${relativeFile}",
                "--cli-server-args={\\\"path\\\":\\\"./dist/esm\\\",\\\"port\\\":\\\"3000\\\",\\\"filesAsHtml\\\":\\\"false\\\"}"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}