// settings.json for WORKSPACE FOLDER
{
    //
    // --------------------------------------------------------------------
    // Settings below are copied from .vscode/settings.json, which was
    // originally generated by `yo code` when creating a new extension
    //
    // off since we define our own npm scripts
    "typescript.tsc.autoDetect": "off",
    //
    "files.exclude": {
        "node_modules": false,
        "dist": false,
        "out": false,
    },
    "search.exclude": {
        "node_modules": true,
        "dist": true,
        "out": true,
    },
    //
    // --------------------------------------------------------------------
    // Settings below are added by me
    //
    "explorer.compactFolders": false,
    "files.autoSave": "onFocusChange",
    "npm.packageManager": "pnpm",
    "debug.console.collapseIdenticalLines": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    //
    "git.enabled": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    //
    "json.schemas": [
        {
            "fileMatch": [
                "package.json"
            ],
            "url": "https://json.schemastore.org/package.json"
        },
        {
            "fileMatch": [
                "tsconfig.json"
            ],
            "url": "https://json.schemastore.org/tsconfig.json"
        },
    ],
    //
    // Ext: Mocha Test Explorer: my settings
    "mochaExplorer.configFile": "./.mocharc.cjs",
    "mochaExplorer.envPath": "./.env.dev",
    "mochaExplorer.mochaPath": "./node_modules/mocha",
    "testExplorer.codeLens": false,
    "search.useParentIgnoreFiles": true,
    "git.openRepositoryInParentFolders": "always",
