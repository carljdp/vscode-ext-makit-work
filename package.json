    "scripts": {
        "reinstall": "npx pnpm install --loglevel error",
        "startx-cjs": "startx-cjs",
        "startx-esm": "startx-esm",
        "check-conf:eslint": "npx @eslint/config-inspector",
        "check-conf:tsconf": "npx tsc -p tsconfig.cjs.json --showConfig && npx tsc -p tsconfig.esm.json --showConfig",
        "lint:report": "eslint --config eslint.config.mjs --cache --cache-location .cache",
        "lint:report-watch": "node package/startx/devt/eslint-watch.mjs --config eslint.config.mjs --cache --cache-location .cache",
        "lint:fix-dry": "eslint --config eslint.config.mjs --cache --cache-location .cache --fix-dry-run",
        "lint:fix": "eslint --config eslint.config.mjs --cache --cache-location .cache --fix",
        "test": "mocha --config .mocharc.cjs"
    },
    "devDependencies": {
        "@eslint/config-inspector": "^0.4.8",
        "@eslint/js": "^9.2.0",
