{
  "name": "makit-work",
  "publisher": "carljdp",
  "displayName": "Makit Work",
  "description": "An experimental extension to mimic built-in Profiles",
  "author": {
    "name": "Carl J du Preez",
    "email": "carljdp@gmail.com",
    "url": "https://linktr.ee/carljdp"
  },
    "icon": "icon.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "makit-work.enableExtension",
        "title": "makit-work.enableExtension"
      },
      {
        "command": "makit-work.disableExtension",
        "title": "makit-work.disableExtension"
      },
      {
        "command": "makit-work.extMan.navigateToExtension",
        "title": "Show Extension in Extension Manager"
      }
    ],
    "configuration": {
      "title": "Makit Work",
      "properties": {
        "makit-work.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable this extension."
        },
        "makit-work.wantedExtensions": {
          "type": "array",
          "default": [],
          "description": "List of wanted extensions"
        },
        "makit-work.unwantedExtensions": {
          "type": "array",
          "default": [],
          "description": "List of unwanted extensions"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "makit-work-extensionManager",
          "title": "Makit Work Manager",
          "icon": "$(extensions-view-icon)"
        }
      ]
    },
    "views": {
      "makit-work-extensionManager": [
        {
          "id": "makit-work.extMan.view.wanted",
          "name": "Wanted"
        },
        {
          "id": "makit-work.extMan.view.unwanted",
          "name": "Unwanted"
        },
        {
          "id": "makit-work.extMan.view.dontCare",
          "name": "Dont care"
        }
      ]
    },
    "colors": [
      {
        "id": "disabledForeground",
        "description": "Foreground color for disabled extensions in the list.",
        "defaults": {
          "dark": "#555",
          "light": "#AAA",
          "highContrast": "#FFF"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.1"
  }
}
