        "lodash": "^4.17.21",
        "minimatch": "^9.0.4",
        "mocha": "^10.4.0",
        "nyc": "^15.1.0",
        "startx": "workspace:./packages/startx/dist",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.8.0"
    },
    "engines": {
        "vscode": "^1.89.0",
        "node": "^21.7.3"
