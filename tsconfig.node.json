{
    "extends": "./tsconfig.json",
    //
    // This serves as a base for apps to be built as multiple files
    // - like with libraries
    //
    "compilerOptions": {
        //
        // ensure that nobody can accidentally use this config
        // to compile the project
        "noEmit": true,
        //
        "module": "node16", // === "nodenext"
        "moduleResolution": "node16"
    },
    "$schema": "https://json.schemastore.org/tsconfig"
}